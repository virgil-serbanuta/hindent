-- Prefix notation for operators
(+) :: Num a => a -> a -> a
(+) a b = a

-- Where clause
sayHello = do
    name <- getLine
    putStrLn $ greeting name
  where
    greeting name = "Hello, " ++ name ++ "!"

-- Guards and pattern guards
f x
    | x <- Just x
    , x <- Just x =
        case x of
            Just x -> e
    | otherwise = do e
  where
    x = y

-- Multi-way if
x =
    if | x <- Just x,
         x <- Just x ->
           case x of
               Just x  -> e
               Nothing -> p
       | otherwise -> e

-- Case inside a `where` and `do`
g x =
    case x of
        a -> x
  where
    foo =
        case x of
            _ -> do
                launchMissiles
